<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C7B1EA"
    tools:context=".CarritoActivity">

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="267dp"
        android:layout_height="192dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/borde_celeste"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="238dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="40dp"
            android:text="Resultados del pedido:"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="48dp"
            android:text="Productos:"
            android:textColor="@color/black"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="88dp"
            android:text="Descuento:"
            android:textColor="@color/black"
            android:textSize="16dp"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOTAL:"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="10dp"
            />

    </FrameLayout>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="COMPRAR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout2" />

    <FrameLayout
        android:layout_width="360dp"
        android:layout_height="206dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/caja_texto_redondo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="95dp"
            android:layout_height="104dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/casita" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="168dp"
            android:layout_height="62dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="50dp"
            android:text="Claws Paws Casa importada de fibra grande (90x92x89 cms)"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="308dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/tachito" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="168dp"
            android:text="PRECIO"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/button4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="148dp"
            android:text="+" />

        <Button
            android:id="@+id/button5"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="148dp"
            android:text="-" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="43dp"
            android:layout_height="49dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="148dp"
            android:text="1"
            android:textAlignment="center"

            android:textColor="@color/black"
            android:textSize="20dp" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>